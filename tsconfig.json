{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es5",
    "lib": ["es6", "es2017"],
    "types": ["node", "mocha"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*",
        "test/*"
      ]
    }
  },
  "exclude": [
    "test/*",
    "dist/*"
  ],
  "inlcude": [
    "src/*"
  ]
}
